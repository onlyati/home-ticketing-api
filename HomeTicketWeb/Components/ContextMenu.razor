@if (IsVisible)
{
    <div class="ati-contextmenu-box" style="left: @PosXFromLeft; bottom: @PosYFromBottom;">
        <div class="row ati-contextmenu-title m-0">
            <div class="col">
                <h5>Quick actions</h5>
            </div>
            <div class="col-auto">
                <button type="button" class="close" aria-label="Close" @onclick="@Hide">
                    <img src="img/close-icon.png" height="25" width="25" />
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public int PosXFromLeft { get; set; }
    [Parameter] public int PosYFromBottom { get; set; }

    private bool IsVisible { get; set; }

    public void Show()
    {
        Console.WriteLine("Megmutatom");
        IsVisible = true;
        StateHasChanged();
    }

    public void Hide()
    {
        Console.WriteLine("Elrejtem");
        IsVisible = false;
        StateHasChanged();
    }
}
